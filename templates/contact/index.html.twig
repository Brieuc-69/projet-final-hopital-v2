{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}


<div class="page-banner overlay-dark bg-image" style="background-image: url({{asset('asset/img/istockphoto-1401846005-612x612.jpg')}});">
    <div class="banner-section">
      <div class="container text-center wow fadeInUp">
        <nav aria-label="Breadcrumb">
          
        <h1 class="font-weight-normal">Contactez-nous</h1>
      </div> <!-- .container -->
    </div> <!-- .banner-section -->
  </div> <!-- .page-banner -->

  <div class="page-section">
    <div class="container">
      <h1 class="text-center wow fadeInUp">Prise de rendez-vous</h1>

      <form class="contact-form mt-5">
        <div class="row mb-3">
          <div class="col-sm-6 py-2 wow fadeInLeft">
            <label for="fullName">Nom et Prénom</label>
            <input type="text" id="fullName" class="form-control" placeholder="Nom et Prénom">
          </div>
          <div class="col-sm-6 py-2 wow fadeInRight">
            <label for="emailAddress">Email</label>
            <input type="text" id="emailAddress" class="form-control" placeholder="Adresse Mail">
          </div>
          <div class="col-12 py-2 wow fadeInUp">
            <label for="subject">Motif</label>
            <input type="text" id="subject" class="form-control" placeholder="">
          </div>
          <div class="col-12 py-2 wow fadeInUp">
            <label for="message">Message</label>
            <textarea id="message" class="form-control" rows="8" placeholder="Ecrivez votre message"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary wow zoomIn">Envoyer</button>
      </form>
    </div>
  </div>

  {{form(form)}}

{% endblock %}
