{% extends 'base.html.twig' %}


{% block seo %}

    <meta name="description" content="Accédez à votre profil personnel chez Santé +. Gérez vos informations, vos rendez-vous et vos préférences de santé en toute simplicité.">
    <meta name="keywords" content="profil, Santé +, gestion de profil, rendez-vous, informations personnelles, espace personnel, santé en ligne">
    <meta name="author" content="Santé +">
   
{% endblock %}

{% block title %}Profil{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f8f9fa;
    }
    
    .card {
        border-radius: 0.25rem;
    }
    
    .card-header {
        border-bottom: 0;
        border-radius: 0.25rem 0.25rem 0 0;
    }
    
    .card-body p {
        margin-bottom: 0.5rem;
    }
    
    .table th, .table td {
        vertical-align: middle;
    }
    
    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }
    
    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

    .bg-blue {
        background-color: #0033cc
    }
    
</style>

<div class="page-banner overlay-dark bg-image" style="background-image: url({{asset('asset/img/istockphoto-1401846005-612x612.jpg')}});">
    <div class="banner-section">
      <div class="container text-center wow fadeInUp">
        <nav aria-label="Breadcrumb">
        
        </nav>
        <h1 class="font-weight-normal">Votre profil !</h1>
      </div> <!-- .container -->
    </div> <!-- .banner-section -->
  </div> <!-- .page-banner -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header text-white bg-blue">
                    <h5 class="my-0">Informations du patient</h5>
                </div>
                <div class="card-body">
                    <p><strong>Nom:</strong> {{ patient.lastName }}</p>
                    <p><strong>Prénom:</strong> {{ patient.firstName }}</p>
                    <p><strong>Email:</strong> {{ patient.email }}</p>
                    <p><strong>Téléphone:</strong> {{ patient.tel }}</p>
                    <p><strong>Adresse:</strong> {{ patient.adress }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header text-white bg-blue">
                    <h5 class="my-0">Rendez-vous</h5>
                </div>
                <div class="card-body">
                    {% if appointements is empty %}
                        <p>Vous n'avez pas encore de rendez-vous.</p>
                    {% else %}
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Motif</th>
                                    <th>Médecin</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for appointement in appointements %}
                                    <tr>
                                        <td>{{ appointement.dateAppointment|date('d/m/Y H:i') }}</td>
                                        <td>{{ appointement.content }}</td>
                                        <td>{{ appointement.medecin.lastName }}</td>
                                        <td>
                                            <a href="{{path('app_appointement_delete', {id: appointement.id})}}" class="btn btn-sm btn-outline-danger">Annuler</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
